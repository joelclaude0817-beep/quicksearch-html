    <div class="logo">QuickSearch</div>
    <div class="search-container">
        <input type="text" id="search-input" placeholder="Search the web quickly...">
        <button id="search-btn">üîç</button>
    </div>
    <div class="footer">QuickSearch ‚Ä¢ Made for your browser</div>

    <script>
        // Get elements
        const searchInput = document.getElementById('search-input');
        const searchBtn = document.getElementById('search-btn');

        // Define your default search engine (customize this URL!)
        // Example: Google Search (replace with Bing, DuckDuckGo, etc.)
        const SEARCH_ENGINE_URL = 'https://www.google.com/search?q=';

        // Search function
        function performSearch() {
            const query = searchInput.value.trim();
            if (query) {
                const encodedQuery = encodeURIComponent(query);
                window.location.href = SEARCH_ENGINE_URL + encodedQuery;
            }
        }

        // Add event listeners
        searchBtn.addEventListener('click', performSearch);
        searchInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') performSearch();
        });
    </script>
